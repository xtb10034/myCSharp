<Window x:Class="DeviceTestingTool.Views.ConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="设备配置" Height="250" Width="350"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="设备类型:" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Device.DeviceType}" Margin="5" FontWeight="Bold"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="波动范围(±):" VerticalAlignment="Center" Margin="5"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox Text="{Binding FluctuationRange}" Width="50"/>
            <TextBlock Text="{Binding Device.DeviceType, Converter={StaticResource DeviceTypeToUnitConverter}}" Margin="5,0" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="采样间隔(ms):" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SamplingInterval}" Margin="5" Width="80"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="采样次数:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SampleCount}" Margin="5" Width="50"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="5">
            <Button Content="确定" Width="75" Click="OkButton_Click"/>
            <Button Content="取消" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
