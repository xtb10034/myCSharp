<Window x:Class="DeviceTestingTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceTestingTool.Views"
        xmlns:viewModels="clr-namespace:DeviceTestingTool.ViewModels"
        xmlns:models="clr-namespace:DeviceTestingTool.Models"
        mc:Ignorable="d"
        Title="设备测试模拟工具" Height="600" Width="1000"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Window.Resources>
        <!-- 数据网格的样式 -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- 按钮样式 -->
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- 文本块样式 -->
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,10,5,5"/>
        </Style>

        <!-- 结果状态样式 -->
        <Style TargetType="TextBlock" x:Key="PassedResult">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="FailedResult">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TestResult">
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <!-- 第一行：设备连接区域 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- 设备连接区域 -->
        <GroupBox Header="设备连接" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 设备类型选择 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="设备类型:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding DeviceTypes}" 
                          SelectedItem="{Binding SelectedDeviceType}" Margin="5"/>

                <!-- 设备ID输入 -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="设备ID:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding DeviceId}" Width="150" Margin="5"/>

                <!-- 连接按钮 -->
                <Button Grid.Row="0" Grid.Column="4" Content="连接设备" 
                        Command="{Binding ConnectDeviceCommand}"/>

                <!-- 控制按钮 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal">
                    <Button Content="断开连接" Command="{Binding DisconnectDeviceCommand}"/>
                    <Button Content="设备配置" Command="{Binding ConfigureDeviceCommand}"/>
                    <Button Content="开始测试" Command="{Binding StartTestingCommand}"/>
                    <Button Content="停止测试" Command="{Binding StopTestingCommand}"/>
                    <Button Content="保存结果" Command="{Binding SaveResultsCommand}"/>
                    <Button Content="加载历史" Command="{Binding LoadHistoryCommand}"/>
                    <TextBlock Text="{Binding StatusMessage}" Margin="10,5" VerticalAlignment="Center" 
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 第二行：数据展示区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：数据表格 -->
            <GroupBox Header="历史数据" Grid.Column="0">
                <DataGrid ItemsSource="{Binding HistoricalData}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="时间戳" Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss.fff}" Width="*"/>
                        <DataGridTextColumn Header="设备ID" Binding="{Binding DeviceId}" Width="*"/>
                        <DataGridTextColumn Header="设备类型" Binding="{Binding DeviceType}" Width="*"/>
                        <DataGridTextColumn Header="测量值" Width="*">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0:0.00} {1}">
                                    <Binding Path="Value" />
                                    <Binding Path="Unit" />
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- 右侧：图表和结果 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 趋势图 -->
                <GroupBox Header="趋势图" Grid.Row="0">
                    <Canvas Margin="10" >

                        <!-- 坐标轴 -->
                        <Line X1="20" Y1="20" X2="20" Y2="250" Stroke="Black" StrokeThickness="1"/>
                        <Line X1="20" Y1="250" X2="900" Y2="250" Stroke="Black" StrokeThickness="1"/>
                        <!-- 折线图 -->
                        <Polyline Points="{Binding ChartData}" Stroke="Red" StrokeThickness="8"/>
                    </Canvas>
                </GroupBox>

                <!-- 测试结果 -->
                <GroupBox Header="测试结果" Grid.Row="1">
                    <Grid DataContext="{Binding CurrentTestResult}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="测试时间:" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="5">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:yyyy-MM-dd HH:mm:ss} - {1:yyyy-MM-dd HH:mm:ss}">
                                    <Binding Path="TestStartTime" />
                                    <Binding Path="TestEndTime" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>


                        <TextBlock Grid.Row="0" Grid.Column="2" Text="设备信息:" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Margin="5">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} ({1})">
                                    <Binding Path="DeviceType" />
                                    <Binding Path="DeviceId" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>


                        <TextBlock Grid.Row="1" Grid.Column="0" Text="采样次数:" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SampleCount}" Margin="5"/>

                        <TextBlock Grid.Row="1" Grid.Column="2" Text="平均值:" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding AverageValue, StringFormat={}{0:0.00} }" Margin="5"/>


                        <TextBlock Grid.Row="2" Grid.Column="0" Text="最大值:" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MaxValue, StringFormat={}{0:0.00} }" Margin="5"/>


                        <TextBlock Grid.Row="2" Grid.Column="2" Text="最小值:" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding MinValue, StringFormat={}{0:0.00}}" Margin="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="阈值范围:" Margin="5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Margin="5">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="MinThreshold" />
                                    <Binding Path="MaxThreshold" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>


                        <TextBlock Grid.Row="4" Grid.Column="0" Text="测试结果:" Margin="5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" 
                                   Text="{Binding IsPassed, Converter={StaticResource BoolToResultConverter}}" 
                                   Style="{StaticResource TestResult}"
                                   Margin="5"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>


    </Grid>


</Window>